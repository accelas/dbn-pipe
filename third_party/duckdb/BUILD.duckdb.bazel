# DuckDB pre-built binary distribution
# Uses pre-compiled static library so consumers don't need libduckdb.so at runtime

cc_import(
    name = "duckdb_lib",
    static_library = "libduckdb_static.a",
)

cc_library(
    name = "duckdb",
    hdrs = ["duckdb.hpp", "duckdb.h"],
    includes = ["."],
    deps = [":duckdb_lib"],
    linkopts = [
        "-lpthread",
        "-ldl",
    ],
    visibility = ["//visibility:public"],
)
