# DuckDB pre-built binary distribution
# Uses pre-compiled shared library to avoid memory-intensive compilation

cc_import(
    name = "duckdb_lib",
    shared_library = "libduckdb.so",
)

cc_library(
    name = "duckdb",
    hdrs = ["duckdb.hpp", "duckdb.h"],
    includes = ["."],
    deps = [":duckdb_lib"],
    linkopts = [
        "-lpthread",
        "-ldl",
    ],
    visibility = ["//visibility:public"],
)
